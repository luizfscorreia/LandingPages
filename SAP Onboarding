    <script>
        const scroll = document.querySelectorAll(".scroll");
        scroll.forEach(function (cta) {
            cta.addEventListener("click", function () {
                document
                    .getElementById("pardot-form")
                    .scrollIntoView({ behavior: "smooth" });
            });
        });

        var floating = document.getElementById("floating-wrapper");
        var startElement = document.getElementById("hero-wrapper");
        var footer = document.getElementById("footer");

        window.addEventListener("scroll", function () {
            if (
                startElement &&
                window.screen.width <= 768 &&
                window.scrollY >
                startElement.getBoundingClientRect().bottom + window.scrollY
            ) {
                floating.classList.remove("hide");
                floating.classList.add("show");
                footer.style.marginBottom = floating.offsetHeight + "px";
            } else {
                floating.classList.remove("show");
                floating.classList.add("hide");
                footer.style.marginBottom = 0;
            }
        });

        var questions = document.querySelectorAll(".question");
        questions.forEach(function (question) {
            question.addEventListener("click", function () {
                var answer = this.nextElementSibling;
                if (answer.style.display === "block") {
                    answer.style.display = "none";
                } else {
                    answer.style.display = "block";
                }
            });
        });
    </script>
